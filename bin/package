#!/usr/bin/env bash

set -euxo pipefail

VERSION=`basename $REF`
DIST=`pwd`/dist

echo "Packaging agora $VERSION for $TARGET..."

EXECUTABLE=target/$TARGET/release/agora

if [[ $OS == windows-latest ]]; then
  EXECUTABLE=$EXECUTABLE.exe
fi

echo "Copying release files..."
mkdir $DIST
cp \
  $EXECUTABLE \
  Cargo.lock \
  Cargo.toml \
  LICENSE \
  README.md \
  $DIST

cd $DIST
echo "Creating release archive..."
case $OS in
  ubuntu-latest | macos-latest)
    ARCHIVE=$DIST/agora-$VERSION-$TARGET.tar.gz
    tar czf $ARCHIVE *
    echo "::set-output name=archive::$ARCHIVE"
    ;;
  windows-latest)
    ARCHIVE=$DIST/agora-$VERSION-$TARGET.zip
    7z a $ARCHIVE *
    echo "::set-output name=archive::`pwd -W`/agora-$VERSION-$TARGET.zip"
    ;;
esac
